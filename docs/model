    <!-- Fixed Action Buttons -->
    <div class="btn-group">
        
        <button id="copyBtn" class="bg-blue-600 hover:bg-blue-700 text-white p-4 shadow-[4px_4px_0px_rgba(0,0,0,0.5)] flex items-center justify-center gap-3 transition-all duration-200 border-2 border-white group w-14 hover:w-48 overflow-hidden whitespace-nowrap rounded-lg">
            <span class="text-xl">ğŸ“‹</span>
            <span class="text-xs font-mono font-bold opacity-0 group-hover:opacity-100 transition-opacity">COPY 5K (Notion)</span>
            <div id="loadingSpinnerCopy" class="spinner hidden"></div>
        </button>

        <button id="downloadPdfBtn" class="bg-gray-800 hover:bg-gray-900 text-white p-4 shadow-[4px_4px_0px_rgba(0,0,0,0.5)] flex items-center justify-center gap-3 transition-all duration-200 border-2 border-white group w-14 hover:w-40 overflow-hidden whitespace-nowrap rounded-lg">
            <span class="text-xl">ğŸ“„</span>
            <span class="text-xs font-mono font-bold opacity-0 group-hover:opacity-100 transition-opacity">SAVE PDF</span>
            <div id="loadingSpinnerPdf" class="spinner hidden"></div>
        </button>

        <button id="downloadPngBtn" class="bg-black hover:bg-gray-900 text-white p-4 shadow-[4px_4px_0px_rgba(0,0,0,0.5)] flex items-center justify-center gap-3 transition-all duration-200 border-2 border-white group w-14 hover:w-40 overflow-hidden whitespace-nowrap rounded-lg">
            <span class="text-xl">ğŸ’¾</span>
            <span class="text-xs font-mono font-bold opacity-0 group-hover:opacity-100 transition-opacity">SAVE 5K PNG</span>
            <div id="loadingSpinnerPng" class="spinner hidden"></div>
        </button>

        <button id="downloadHtmlBtn" class="bg-gray-700 hover:bg-gray-800 text-white p-4 shadow-[4px_4px_0px_rgba(0,0,0,0.5)] flex items-center justify-center gap-3 transition-all duration-200 border-2 border-white group w-14 hover:w-40 overflow-hidden whitespace-nowrap rounded-lg">
            <span class="text-xl">ğŸ’»</span>
            <span class="text-xs font-mono font-bold opacity-0 group-hover:opacity-100 transition-opacity">SOURCE</span>
            <div id="loadingSpinnerHtml" class="spinner hidden"></div>
        </button>
    </div>

    <script>
        const { jsPDF } = window.jspdf;

        // Configuration for 5K Export
        const captureConfig = {
            backgroundColor: '#ffffff',
            scale: 6, // 6K Resolution for absolute clarity
            useCORS: true,
            logging: false,
            width: 1000, // Force desktop width
            windowWidth: 1000,
            onclone: (document) => {
                // Ensure text rendering is optimized in clone
                const style = document.createElement('style');
                style.innerHTML = `
                    * { 
                        text-rendering: geometricPrecision !important; 
                        -webkit-font-smoothing: antialiased !important;
                    }
                `;
                document.head.appendChild(style);
            }
        };

        // DOWNLOAD HTML SOURCE
        document.getElementById('downloadHtmlBtn').addEventListener('click', () => {
            const htmlContent = "<!DOCTYPE html>\n" + document.documentElement.outerHTML;
            const blob = new Blob([htmlContent], {type: 'text/html'});
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'BTNC_Model_Viz.html';
            link.click();
        });

        // COPY TO CLIPBOARD
        document.getElementById('copyBtn').addEventListener('click', function() {
            const btn = this;
            const spinner = document.getElementById('loadingSpinnerCopy');
            const icon = btn.querySelector('span:first-child');
            const text = btn.querySelector('span:nth-child(2)');
            
            triggerLoading(btn, icon, text, spinner, true);

            const elementToCapture = document.getElementById("export-container");

            setTimeout(() => {
                html2canvas(elementToCapture, captureConfig).then(canvas => {
                    canvas.toBlob(blob => {
                        if (navigator.clipboard && navigator.clipboard.write) {
                            const item = new ClipboardItem({ 'image/png': blob });
                            navigator.clipboard.write([item]).then(() => {
                                alert('5K Image copied! Paste it directly into Notion (Ctrl+V).');
                                resetBtn(btn, icon, text, spinner);
                            }).catch(err => {
                                console.error(err);
                                alert('Clipboard write failed. Try saving as PNG instead.');
                                resetBtn(btn, icon, text, spinner);
                            });
                        } else {
                            alert('Clipboard API not supported. Please use Save PNG.');
                            resetBtn(btn, icon, text, spinner);
                        }
                    });
                }).catch(err => {
                    console.error(err);
                    resetBtn(btn, icon, text, spinner);
                });
            }, 100);
        });

        // PNG Download
        document.getElementById('downloadPngBtn').addEventListener('click', function() {
            const btn = this;
            const spinner = document.getElementById('loadingSpinnerPng');
            const icon = btn.querySelector('span:first-child');
            const text = btn.querySelector('span:nth-child(2)');
            
            triggerLoading(btn, icon, text, spinner);

            const elementToCapture = document.getElementById("export-container");

            setTimeout(() => {
                html2canvas(elementToCapture, captureConfig).then(canvas => {
                    const link = document.createElement('a');
                    link.download = 'BTNC_Model_5K_Art.png';
                    link.href = canvas.toDataURL('image/png');
                    link.click();
                    resetBtn(btn, icon, text, spinner);
                }).catch(err => {
                    console.error(err);
                    resetBtn(btn, icon, text, spinner);
                });
            }, 100);
        });

        // PDF Download
        document.getElementById('downloadPdfBtn').addEventListener('click', function() {
            const btn = this;
            const spinner = document.getElementById('loadingSpinnerPdf');
            const icon = btn.querySelector('span:first-child');
            const text = btn.querySelector('span:nth-child(2)');
            
            triggerLoading(btn, icon, text, spinner);

            const elementToCapture = document.getElementById("export-container");

            setTimeout(() => {
                // PDF doesn't need 6x scale, 3x is sufficient and avoids crashes
                html2canvas(elementToCapture, { ...captureConfig, scale: 3 }).then(canvas => {
                    const imgData = canvas.toDataURL('image/png');
                    const imgWidth = canvas.width;
                    const imgHeight = canvas.height;
                    
                    const pdf = new jsPDF({
                        orientation: imgWidth > imgHeight ? 'l' : 'p',
                        unit: 'px',
                        format: [imgWidth, imgHeight]
                    });

                    pdf.addImage(imgData, 'PNG', 0, 0, imgWidth, imgHeight);
                    pdf.save('BTNC_Model_Full.pdf');
                    
                    resetBtn(btn, icon, text, spinner);
                }).catch(err => {
                    console.error(err);
                    resetBtn(btn, icon, text, spinner);
                });
            }, 100);
        });

        function triggerLoading(btn, icon, text, spinner, keepExpanded = false) {
            if(keepExpanded) btn.classList.add('w-48');
            else btn.classList.add('w-40');
            
            btn.classList.add('pointer-events-none');
            text.style.opacity = '1';
            icon.style.display = 'none';
            spinner.style.display = 'block';
        }

        function resetBtn(btn, icon, text, spinner) {
            btn.classList.remove('w-40', 'w-48', 'pointer-events-none');
            text.style.opacity = ''; 
            icon.style.display = 'inline';
            spinner.style.display = 'none';
        }
    </script>
</body>
</html>
